<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset name="COM_K2STORE_BASIC_OPTIONS" label="K2STORE_BASIC_OPTIONS">

		<field name="k2store_enable_css" type="radio" default="1" class="btn-group"
			label="k2store_conf_k2store_enable_css_label" description="k2store_conf_k2store_enable_css_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_YES</option>
		</field>
		

		 <field name="load_jquery" type="radio" default="1"
            class="btn-group" label="k2store_conf_load_jquery_label"
            description="k2store_conf_load_jquery_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>
        </field>
        
         <field name="load_jquery_ui" type="list" default="3" 
			label="k2store_conf_load_jqueryui_label" description="k2store_conf_load_jqueryui_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_ONLY_FRONTEND</option>
			<option value="2">K2STORE_ONLY_BACKEND</option>
			<option value="3">K2STORE_BOTH_FRONTEND_AND_BACKEND</option>
		</field>
        
        
        <field name="load_bootstrap" type="radio" default="1"
            class="btn-group" label="k2store_conf_load_bootstrap_label"
            description="k2store_conf_load_bootstrap_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>
        </field>
        
        <field name="date_format" type="text" size="40" default="Y-m-d H:i:s"
			label="k2store_conf_date_format_label" 
			description="k2store_conf_date_format_desc" />
		
		<field name="show_quicktips" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_quicktips_label" 
			description="k2store_conf_show_quicktips_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>

		<field name="isregister" type="list" default="0"
			label="k2store_conf_isregister_label" 
			description="k2store_conf_isregister_desc">
			<option value="1">K2STORE_REGISTERED</option>
			<option value="0">K2STORE_PUBLIC</option>
		</field>

			<field name="backupfolderpath" type="text" default="" size="40"
			label="k2store_conf_backupfolderpath_label" 
			description="k2store_conf_backupfolderpath_desc" />
	</fieldset>

	<fieldset name="COM_K2STORE_CART_SETTINGS" label="K2STORE_CART_SETTINGS">
	
		<field name="catalog_mode" type="radio" default="0" class="btn-group"
			label="k2store_conf_enable_catalog_mode_label" description="k2store_conf_enable_catalog_mode_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>

		<field name="show_thumb_cart" type="list" default="intro"
			label="k2store_conf_show_thumb_cart_label" 
			description="k2store_conf_show_thumb_cart_desc">
			<option value="within_text">k2store_conf_image_within_article</option>
			<option value="intro">K2STORE_CONF_ITEM_IMAGE</option>
			<option value="0">k2store_conf_never_show_thumbnail</option>
		</field>
		
		<field name="cartimage_size" type="radio" default="Small" class="btn-group"
			label="k2store_conf_cartimage_size_label" 
			description="k2store_conf_cartimage_size_desc">
			<option value="Small">K2STORE_CONF_CARTIMAGE_SIZE_SMALL</option>
			<option value="Medium">K2STORE_CONF_CARTIMAGE_SIZE_MEDIUM</option>
			<option value="Large">K2STORE_CONF_CARTIMAGE_SIZE_LARGE</option>
		</field>
		
		<field name="show_thumb_invoice" type="radio" default="0" class="btn-group"
			label="k2store_conf_show_thumb_invoice_label" 
			description="k2store_conf_show_thumb_invoice_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		<field name="addtocart_placement" type="radio" default="default" class="btn-group"
			label="k2store_conf_addtocart_placement_label" 
			description="k2store_conf_addtocart_placement_desc">
			<option value="default">K2STORE_CONF_OPTION_ADDTOCART_DEFAULT</option>
			<option value="tag">K2STORE_CONF_OPTION_ADDTOCART_TAG</option>
			<option value="both">K2STORE_CONF_OPTION_ADDTOCART_BOTH</option>
		</field>
		
		<field name="config_tax_default" type="radio" default="billing"
			class="btn-group" label="k2store_conf_config_tax_default_label"
			description="k2store_conf_config_tax_default_desc">
			<option value="billing">K2STORE_CONF_CONFIG_TAX_OPTION_BILLING_ADDRESS</option>
			<option value="shipping">K2STORE_CONF_CONFIG_TAX_OPTION_SHIPPING_ADDRESS</option>
		</field>
		
		<field name="show_tax_total" type="radio" default="0" class="btn-group"
			label="k2store_conf_show_tax_total_label" 
			description="k2store_conf_show_tax_total_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		<field name="auto_calculate_tax" type="radio" default="1" class="btn-group"
            label="k2store_conf_auto_calculate_tax_label" description="k2store_conf_auto_calculate_tax_desc">
            <option value="1">K2STORE_YES</option>
            <option value="0">K2STORE_NO</option>
        </field>
		
		<field name="show_sku_field" type="radio" default="0" class="btn-group"
            label="k2store_conf_show_sku_field_label" 
            description="k2store_conf_show_sku_field_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>
        </field>
		
		
		<field name="show_qty_field" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_qty_field_label" 
			description="k2store_conf_show_qty_field_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		<field name="show_price_field" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_price_field_label" 
			description="k2store_conf_show_price_field_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		

		<field name="price_display_options" type="list" default="1"
			label="k2store_conf_price_display_options_label" 
			description="k2store_conf_price_display_options_desc">
			<option value="1">K2STORE_CONFIG_PRICE_ONLY</option>
			<option value="2">K2STORE_CONFIG_PRICE_PLUS_TAX</option>
			<option value="3">K2STORE_CONFIG_PRICE_AND_TAX_SEPARATE</option>
		</field>
		
		<field name="show_price_prefix" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_price_prefix_label" 
			description="k2store_conf_show_price_prefix_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>

		<field name="show_shipping_address" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_shipping_address_label" 
			description="k2store_conf_show_shipping_address_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		
		<field name="show_login_form" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_login_form_label" 
			description="k2store_conf_show_login_form_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_YES</option>
		</field>
		
		<field name="allow_registration" type="radio" default="1" class="btn-group"
			label="k2store_conf_allow_registration_label" 
			description="k2store_conf_allow_registration_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_YES</option>
		</field>		
		
		<field name="allow_guest_checkout" type="radio" default="0" class="btn-group"
			label="k2store_conf_allow_guest_checkout_label" 
			description="k2store_conf_allow_guest_checkout_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_YES</option>
		</field>
		
		<field name="allow_attachment_downloads" type="radio" default="0" class="btn-group"
			label="k2store_conf_allow_attachment_downloads_label" 
			description="k2store_allow_attachment_downloads_desc">
			<option value="0">K2STORE_NO</option>
			<option value="1">K2STORE_YES</option>
		</field>
		
		<field name="popup_style" type="radio" default="1" class="btn-group"
			label="k2store_conf_popup_style_label" description="k2store_conf_popup_style_desc">
			<option value="1">K2STORE_CONF_OPTION_SMALL</option>
			<option value="3">K2STORE_CONF_OPTION_REDIRECT</option>
		</field>
		
		<field name="show_customer_note" type="radio" default="1" class="btn-group"
            label="k2store_conf_show_customer_note_label" description="k2store_conf_show_customer_note_desc">
            <option value="0">K2STORE_NO</option>           
            <option value="1">K2STORE_YES</option>
        </field>
        
        <field name="show_tax_calculator" type="radio" default="1" class="btn-group"
            label="k2store_conf_show_tax_calculator_label" description="k2store_conf_show_tax_calculator_desc">
            <option value="0">K2STORE_NO</option>           
            <option value="1">K2STORE_YES</option>
        </field>
		
	</fieldset>
	
	<fieldset name="COM_K2STORE_DISCOUNT_SETTINGS" label="K2STORE_DISCOUNT_SETTINGS">
	
		<field name="global_minordervalue" type="text" size="20"
			default="" label="k2store_conf_global_minordervalue_label"
			description="k2store_conf_global_minordervalue_desc" />
	
	</fieldset>
	
	<fieldset name="COM_K2STORE_ORDER_SETTINGS" label="K2STORE_ORDER_FIELDS">
    
        <field name="show_incomplete_orders" type="radio" default="1" class="btn-group"
            label="k2store_conf_show_incomplete_orders_label" 
            description="k2store_conf_show_incomplete_orders_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>            
        </field>
        
        <field name="export_custom_fields" type="radio" default="0" class="btn-group"
            label="k2store_conf_export_custom_fields_label" 
            description="k2store_conf_export_custom_fields_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>            
        </field>
        
         <field name="show_postpayment_orderlink" type="radio" default="1" class="btn-group"
            label="k2store_conf_show_postpayment_orderlink_label" 
            description="k2store_conf_show_show_postpayment_orderlink_desc">
            <option value="0">K2STORE_NO</option>
            <option value="1">K2STORE_YES</option>            
        </field>
        
     </fieldset> 
	
	<fieldset name="COM_K2STORE_SHOP_SETTINGS" label="K2STORE_SHOP_SETTINGS">

		<field name="emails_defaultemail" type="text" size="40"
			default="yourfrom@email.com" 
			label="k2store_conf_emails_defaultemail_label"
			description="k2store_conf_emails_defaultemail_desc" />
			
		<field name="emails_defaultname" type="text" size="40"
			default="Your From Name" 
			label="k2store_conf_emails_defaultname_label" 
			description="k2store_conf_emails_defaultname_desc" />

		<field name="admin_email" type="text" size="40" default="youradmin@email.com"
			label="k2store_conf_admin_email_label" 
			description="k2store_conf_admin_email_desc" />

	</fieldset>
	
	<fieldset name="updates"
		label="COM_K2STORE_CONFIG_UPDATES_LABEL"
		description="COM_K2STORE_CONFIG_UPDATES_DESC">
			
		<field name="minstability" type="list" default="stable" label="COM_K2STORE_CONFIG_UPDATES_MINSTABILITY_LABEL" description="COM_K2STORE_CONFIG_UPDATES_MINSTABILITY_DESC">
			<option value="alpha">COM_K2STORE_CONFIG_UPDATES_STABILITY_ALPHA</option>
			<option value="beta">COM_K2STORE_CONFIG_UPDATES_STABILITY_BETA</option>
			<option value="rc">COM_K2STORE_CONFIG_UPDATES_STABILITY_RC</option>
			<option value="stable">COM_K2STORE_CONFIG_UPDATES_STABILITY_STABLE</option>
		</field>
		<field name="liveupdate" type="hidden" default="" label="" description="" />
	</fieldset>
	
	

	<fieldset name="COM_K2STORE_MISC_SETTINGS" label="K2STORE_MISC_SETTINGS">

		<field name="show_terms" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_terms_label" 
			description="k2store_conf_show_terms_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		<field name="terms_display_type" type="radio" default="link" class="btn-group" 
			label="k2store_conf_terms_display_type_label" 
			description="k2store_conf_terms_display_type_desc">
			<option value="link">K2STORE_CONF_TERMS_DISPLAY_OPTION_LINK</option>
			<option value="checkbox">K2STORE_CONF_TERMS_DISPLAY_OPTION_CHECKBOX</option>
		</field>
		
		<field name="show_title" type="radio" default="1" class="btn-group"
			label="k2store_conf_show_title_label" 
			description="k2store_conf_show_title_desc">
			<option value="1">K2STORE_YES</option>
			<option value="0">K2STORE_NO</option>
		</field>
		
		<field name="termsid" type="text" size="20" default=""
			label="k2store_conf_termsid_label"
			description="k2store_conf_termsid_desc" />

	</fieldset>
	
<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_k2store"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>
	
	
</config>
